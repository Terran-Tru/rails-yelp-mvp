<h1>
  Nuestros Restaurantes
</h1>

<%= simple_form_for([@restaurant, @review]) do |f| %>
<%= f.input :content %>
<%= f.input :rating, collection: 1..5, prompt: "Selecciona un rating" %>
<%= f.submit "Submit new" %>
<% end %>

<%= link_to "cancelar", restaurant_path(@restaurant), class:"btn btn-danger mt-3" %>